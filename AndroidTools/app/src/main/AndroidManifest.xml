<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nluu.androidtools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.nluu.tools.Utility"/>
    </application>
    <uses-permission android:name="android.permission.VIBRATE"/> <!-- Use to Vibrate phone -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/> <!-- Use to store files on phone -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/> <!-- Used to get device id -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/> <!-- Used to get device id -->
</manifest>